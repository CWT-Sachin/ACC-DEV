                            <div class="col-md-6">
                                <h4 style="font-weight:bolder;">Unpaid Invoice</h4>
                                <div class="table-responsive">
                                    <table class="table color-bordered-table purple-bordered-table" id="tblContainer1">
                                        <!-- Table 1: Display invoices -->
