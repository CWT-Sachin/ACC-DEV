                            <div class="col-md-7">
                                <div id="paymentDetails" style="border:1px solid black; padding: 10px;">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="row" >
                                                <div class="col-md-6">
                                                    <label for="ExchangeRate" id="paymentLabel">Cheque No</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="text" asp-for="TxnReceiptHdMulti.FirstOrDefault().ChequeNo" class="form-control" value="" />
                                                    <span asp-validation-for="TxnReceiptHdMulti.FirstOrDefault().ChequeNo" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label for="Customer">Bank</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <select id="ChequeBankID" asp-for="TxnReceiptHdMulti.FirstOrDefault().ChequeBankID" value="" name="ChequeBankID" class="form-control" asp-items="ViewBag.RefBankList"></select>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label for="Date ">Date </label>
                                        </div>
                                        <div class="col-md-2">
                                            <input type="date" asp-for="TxnReceiptHdMulti.FirstOrDefault().ChequeDate" class="form-control" value="Date" />
                                            <span asp-validation-for="TxnReceiptHdMulti.FirstOrDefault().ChequeDate" class="text-danger"></span>
