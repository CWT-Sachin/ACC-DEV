                                    <div class="col-md-2">
                                        <label for="Customer">Credit Acc</label>
                                    </div>
                                    <div class="col-md-6">
                                        <select id="Currency" asp-for="TxnReceiptHdMulti.FirstOrDefault().CreditAcc" value="" name="BankID" class="form-control" asp-items="ViewBag.AccountsCodes"></select>
