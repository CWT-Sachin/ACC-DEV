    </div>
</div>
@section scripts {
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Function to set selected items before form submission
    function setSelectedItems() {
        var selectedItems = [];

        // Iterate over selected invoices
        $('#ContainerDetailsBody2 tr').each(function () {
            var refNo = $(this).find('td:nth-child(2)').text();
            var amount = $(this).find('td:nth-child(4)').text();

            selectedItems.push({
                RefNo: refNo,
                RefType: 'Invoice', // or any other value to indicate invoice
                Amount: amount
            });
        });

        // Iterate over selected debit notes
        $('#ContainerDetailsBodyDebitNote2 tr').each(function () {
            var refNo = $(this).find('td:nth-child(2)').text();
            var amount = $(this).find('td:nth-child(4)').text();

            selectedItems.push({
                RefNo: refNo,
                RefType: 'DebitNote', // or any other value to indicate debit note
                Amount: amount
            });
        });

        // Set the value of dtlItemsList hidden field
        $('#dtlItemsList').val(JSON.stringify(selectedItems));
    }

    // Call setSelectedItems before form submission
    $('form').submit(setSelectedItems);
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var overseasRadio = document.getElementById("Overseas");
        var localRadio = document.getElementById("Local");
        var locationInput = document.getElementById("locationInput");

        overseasRadio.addEventListener("change", function () {
            if (overseasRadio.checked) {
                locationInput.value = overseasRadio.value;
            }
        });

        localRadio.addEventListener("change", function () {
            if (localRadio.checked) {
                locationInput.value = localRadio.value;
            }
        });
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var overseasRadio = document.getElementById("Overseas");
        var localRadio = document.getElementById("Local");
        var overseasDropdown = document.getElementById("overseasDropdown");
        var localDropdown = document.getElementById("localDropdown");
        var poAgentDropdown = document.getElementById("POAgent");
        var shippingLineDropdown = document.getElementById("ShippingLine");

        overseasRadio.addEventListener("change", function () {
            if (overseasRadio.checked) {
                overseasDropdown.style.display = "flex";
                localDropdown.style.display = "none";
                // Set shipping line dropdown value to null
                shippingLineDropdown.value = "";
            }
        });

        localRadio.addEventListener("change", function () {
            if (localRadio.checked) {
                overseasDropdown.style.display = "none";
                localDropdown.style.display = "flex";
                // Set PO Agent dropdown value to null
                poAgentDropdown.value = "";
            }
        });
    });
</script>

<script>
    // Function to update the total receipt amount
    function updateTotalAmount() {
        var total = 0;

        // Iterate over selected invoices
        document.querySelectorAll('#ContainerDetailsBody2 tr').forEach(function (row) {
            total += parseFloat(row.querySelector('td:nth-child(4)').innerText);
        });

        // Iterate over selected debit notes
        document.querySelectorAll('#ContainerDetailsBodyDebitNote2 tr').forEach(function (row) {
            total += parseFloat(row.querySelector('td:nth-child(4)').innerText);
        });

        // Update the total amount field
        document.getElementById('totalReceiptAmount').value = total.toFixed(2);
        document.getElementById('receiptTotalAmt').value = total.toFixed(2);
    }

    // Call updateTotalAmount when a selection changes
    document.addEventListener('change', updateTotalAmount);
</script>

<script>
