                                    <div class="col-md-2">
                                        <label for="Customer">Debit Acc</label>
                                    </div>
                                    <div class="col-md-6">
                                        <select id="Currency" asp-for="TxnReceiptHdMulti.FirstOrDefault().DebitAcc" value="" name="BankID" class="form-control" asp-items="ViewBag.AccountsCodes"></select>
