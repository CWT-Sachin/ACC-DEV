        // Listen for changes in the radio buttons
        $("input[name='PaymentMethod']").change(function () {
            if ($("input[name='PaymentMethod']:checked").val() === "Cash") {
                $("#paymentDetails").hide();
            } else {
                $("#paymentDetails").show();
