@model ACC_DEV.ViewModel.TxnReceiptViewModel
@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">Transactions</h4>
                </div>
                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Transactions</li>
                        </ol>
                        <button type="button" onclick="location.href='@Url.Action("Create", "TxnReceiptHDs")'" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Create New Receipt</button>
                    </div>
                </div>
            </div>
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h1 class="text-themecolor">Receipt</h1>
                </div>
                <div class="col-md-3 align-self-center text-right">
                </div>
                <!-- Search-->
                <div class="col-md-4 align-self-center text-right">
                    @using (Html.BeginForm("Index", "TxnReceiptHDs", new { searchString = "" }, FormMethod.Post))
                    {
                        <div class="input-group">

                            <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Search by No..." />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-info"> <i class="fas fa-search-plus"></i> Go!</button>
                            </div>
                        </div>
                    }
                </div>
                <!-- End Search-->
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">

                        <table class="table color-bordered-table purple-bordered-table">
                            <thead>
                                <tr>
                                    <th>
                                        Receipt No
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Customer/Agent/Supplier
                                    </th>
                                    <th>
                                        Cheque No
                                    </th>
                                    <th>
                                        Pay method
                                    </th>
                                    <th>
                                        Receipt Total Amount
                                    </th>
                                    <th>
                                       Approved
                                    </th>
                                    <th>
                                        Canceled
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TxnReceiptHdMulti)
                                {
                                    <tr>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.ReceiptNo)
                                        </td>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td nowrap=""  style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @if (item.CustomerType == "Agent")
                                            {
                                                @Html.DisplayFor(modelItem => item.RefAgentNavigation.AgentName)
                                            }
                                            else if (item.CustomerType == "Customer")
                                            {
                                                @Html.DisplayFor(modelItem => item.RefCustomerNavigation.Name)
                                            }

                                        </td>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.ChequeNo)
                                        </td>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.PaymentMethod)
                                        </td>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.ReceiptTotalAmt)
                                        </td>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.Approved)
                                        </td>
                                        <td style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @Html.DisplayFor(modelItem => item.Canceled)
                                        </td>
                                        <td nowrap="" style="background-color: @(item.Approved == true ? "#ECFFDC" : "white");">
                                            @{
                                                bool isEditEnabled = item.Approved == false;
                                            }

                                            <a class="btn btn-sm btn-rounded btn-primary@(isEditEnabled ? "" : " disabled")"
                                           asp-action="Edit" asp-route-id="@item.ReceiptNo">
                                                <i class="fa fa-edit"></i> Edit
                                            </a> |

                                            <a class="btn btn-sm btn-rounded btn-success"
                                           asp-action="Details" asp-route-id="@item.ReceiptNo">
                                                <i class="fa ti-view-list-alt"></i> Details
                                            </a> |
                                            <a class="btn btn-sm btn-rounded btn-danger@(isEditEnabled ? "" : " disabled")"
                                           asp-action="Approve" asp-route-id="@item.ReceiptNo">
                                                <i class="ti-check-box"></i> Approve
                                            </a>
                                            |
                                            <a class="btn btn-sm btn-rounded btn-warning" asp-action="RepPrintReceipt" asp-route-ReceiptNo="@item.ReceiptNo"><i class="fa  fa-print"></i> Print Reciept</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="container">
                @if (pager.TotalPages > 0)
                {
                        <ul class="pagination justify-content-end">
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                        <a class="page-link" aps-controller="RefPorts" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                                    </li>
                        }
                        </ul>
                        <ul class="pagination justify-content-end">
                            <p> Page @(pager.TotalPages < pager.CurrentPage ? 0 : pager.CurrentPage) of @pager.TotalPages </p>
                        </ul>
                }
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Container fluid  END -->
        <!-- ============================================================== -->

    </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper -  END style you can find in pages.scss -->
<!-- ============================================================== -->