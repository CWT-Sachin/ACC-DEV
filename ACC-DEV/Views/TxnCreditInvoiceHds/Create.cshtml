<!-- Creditor Selection-->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const radios = document.getElementsByName('CreditorType');
        const creditorAgent = document.getElementById('CreditorAgent');
        const creditorShippingLine = document.getElementById('CreditorShippingLine');
        const creditorSupplier = document.getElementById('CreditorSupplier');

        function showHideSections() {
            creditorAgent.style.display = 'none';
            creditorShippingLine.style.display = 'none';
            creditorSupplier.style.display = 'none';

            if (document.getElementById('Agent').checked) {
                creditorAgent.style.display = 'flex';
            } else if (document.getElementById('ShippingLine').checked) {
                creditorShippingLine.style.display = 'flex';
            } else if (document.getElementById('Supplier').checked) {
                creditorSupplier.style.display = 'flex';
            }
        }

        radios.forEach(radio => {
            radio.addEventListener('change', showHideSections);
        });

        // Initial call to set correct section
        showHideSections();
    });
</script>

<!-- Other / Job  Selection-->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Function to toggle the visibility of JobSelection
        function toggleJobSelection() {
            var otherRadio = document.getElementById("Other");
            var jobSelectionDiv = document.getElementById("JobSelection");

            if (otherRadio.checked) {
                jobSelectionDiv.style.display = "none";
            } else {
                jobSelectionDiv.style.display = "block";
            }
        }

        // Attach the function to the change event of the radio buttons
        var JobSelectionRadios = document.getElementsByName("JobSelection");
        for (var i = 0; i < JobSelectionRadios.length; i++) {
            JobSelectionRadios[i].addEventListener("change", toggleJobSelection);
        }

        // Initial check
        toggleJobSelection();
    });
</script>

<!--Add remove rows -->
<script type="text/javascript">
        function AddRow(e) {
            // alert(" record(s) inserted.");
            //clones the first row of the table
            var newRow = $("#tblContainer tbody tr").first().clone();
            //removes the 'hidden' attribute so it will be visible when added  to the table
            newRow.removeAttr("hidden");

            // Get No of rows
            var NoOfRows = $("#tblContainer tbody tr").length
            var counter = NoOfRows + 1;


            // Update remove Button
            var removeBtn = newRow.find('input[name="RemoveBttn"]');
            var RemoveBtnVal = 'RemoveRow(' + counter + ')';
            $(removeBtn).attr('onclick', RemoveBtnVal);

            //Update Row id (for remove)
            var RowID = "tablerow" + counter;
            newRow.attr("id", RowID);
            //add/append new row to the table

            $("tbody").append(newRow);

            // add event listener to the new amount input
            newRow.find('input[name="Amount"]').on('input', calculateTotalAmount);

            return false;

        }

        function RemoveRow(index) {
            // alert(" record remove: " + index);
            $('#tablerow' + index).remove();
            calculateTotalAmount();
            return false;
        }
        function calculateTotalAmount() {
            let total = 0;
            $("input[name='Amount']").each(function () {
                let amount = parseFloat($(this).val());
                if (!isNaN(amount)) {
                    total += amount;
                }
            });
            //$("#TotalAmtLKR").val(total.toFixed(2));
        $("#TotalAmtLKR").val(formatNumber(total));
        }
        function formatNumber(num) {
            return num.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        $(document).ready(function () {
            // Add event listener to existing amount inputs
            $("input[name='Amount']").on('input', calculateTotalAmount);
        });
    </script>

    <!--Create and submit accounts-->
    <script>
        // Create and submit Charge Items

        function submitForm(e) {

            const dtlItemsArray = [];
            const tableRows = $("#tblContainer tbody tr");
            var chkAmount = "";

            tableRows.each(function (index) {
                //alert("Test in tbl ROW");
                const trRow = $(this);
                chkAmount = trRow.find('input[name="Amount"]').val();
                // Check if chkAmount is empty or zero
                if (chkAmount === "" || parseFloat(chkAmount) === 0) {
                    // chkAmount is empty or zero
                    //console.log("chkAmount is empty or zero");
                } else {
                    // chkAmount is not empty and not zero
                    const dtlItemJson = buildItemsJson(trRow, index);
                    dtlItemsArray.push(dtlItemJson);
                }
            });
            $("#dtlItemsList").val(JSON.stringify(dtlItemsArray));
        }
        // Json Var create
        function buildItemsJson(trRow, id) {
            return {
                SerialNo: id,
                ChargeItem: trRow.find('select[name="ChargeItemRw"]').val(),
                Unit: trRow.find('select[name="Unit"]').val(),
                Rate: trRow.find('input[name="Rate"]').val(),
                Currency: trRow.find('select[name="Currency"]').val(),
                Qty: trRow.find('input[name="Qty"]').val(),
                Amount: trRow.find('input[name="Amount"]').val(),
            };
        }
    </script>

    <!--Check Amounts before submit-->
