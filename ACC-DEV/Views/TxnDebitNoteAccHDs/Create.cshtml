<!--Enter key blocking from submitting / checked and "Job No" is empty / process table rows and build JSON-->
<script>
    // Enter key blocking from submitting
    document.getElementById("TxnDebitNoteAccHDForm").onkeypress = function (e) {
        preventEnterSubmit(e);
    }

    // Function Enter key blocking from submitting
    function preventEnterSubmit(e) {
        // Enter Key
        if (e.which == 13) {
            var $targ = $(e.target);
            if (!$targ.is("textarea") && !$targ.is(":button,:submit")) {
                e.preventDefault();
            }
        }
    }

    // Function to validate the form before submission
    function validateForm() {
        const jobRelatedRadio = document.getElementById("JobRelated");
        const jobNoInput = document.getElementById("JobNoInput");

        // If "Job Related" is checked and "Job No" is empty
        if (jobRelatedRadio.checked && jobNoInput.value.trim() === "") {
            document.getElementById("jobNoError").textContent = "Job No is required for Job Related documents.";
            return false;
        }

        // Clear error message if validation passes
        document.getElementById("jobNoError").textContent = "";
        return true;
    }

    // Function to process table rows and build JSON
    function submitForm(e) {
        // Validate the form
        if (!validateForm()) {
            e.preventDefault(); // Prevent form submission if validation fails
            return;
        }

        const dtlItemsArray = [];
        const tableRows = $("#tblContainer tbody tr");
        var chkAmount = "";

        tableRows.each(function (index) {
            const trRow = $(this);
            chkAmount = trRow.find('input[name="Amount"]').val();
            // Check if chkAmount is empty or zero
            if (chkAmount === "" || parseFloat(chkAmount) === 0) {
                // chkAmount is empty or zero
                //console.log("chkAmount is empty or zero");
            } else {
                // chkAmount is not empty and not zero
                const dtlItemJson = buildItemsJson(trRow, index);
                dtlItemsArray.push(dtlItemJson);
            }
        });
        $("#dtlItemsList").val(JSON.stringify(dtlItemsArray));
    }

    // Json Var create
    function buildItemsJson(trRow, id) {
        return {
            SerialNo: id,
            LineAccNo: trRow.find('select[name="LineAccNo"]').val(),
            ChargeItem: trRow.find('select[name="ChargeItemRw"]').val(),
            Description: trRow.find('input[name="DescrRW"]').val(),
            Amount: trRow.find('input[name="Amount"]').val(),
        };
    }

    // Attach submitForm function to the form's submit event
    document.getElementById("TxnPurchasVoucherHDForm").addEventListener("submit", submitForm);
</script>




