<!--Add remove rows -->
<script type="text/javascript">
        function AddRow(e) {
            // alert(" record(s) inserted.");
            //clones the first row of the table
            var newRow = $("#tblContainer tbody tr").first().clone();
            //removes the 'hidden' attribute so it will be visible when added  to the table
            newRow.removeAttr("hidden");

            // Get No of rows
            var NoOfRows = $("#tblContainer tbody tr").length
            var counter = NoOfRows + 1;

            // Update remove Button
            var removeBtn = newRow.find('input[name="RemoveBttn"]');
            var RemoveBtnVal = 'RemoveRow(' + counter + ')';
            $(removeBtn).attr('onclick', RemoveBtnVal);

            //Update Row id (for remove)
            var RowID = "tablerow" + counter;
            newRow.attr("id", RowID);
            //add/append new row to the table

            $("tbody").append(newRow);

            // add event listener to the new amount input
            newRow.find('input[name="Amount"]').on('input', calculateTotalAmount);
            return false;

        }

        function RemoveRow(index) {
            // alert(" record remove: " + index);
            $('#tablerow' + index).remove();
            calculateTotalAmount();
            return false;
        }
        function calculateTotalAmount() {
            let total = 0;
            $("input[name='Amount']").each(function () {
                let amount = parseFloat($(this).val());
                if (!isNaN(amount)) {
                    total += amount;
                }
            });
                let exchangeRateValue = $("#ExchangeRate").val();
                let exchangeRate = 0;
                if (exchangeRateValue) {
                    exchangeRate = parseFloat(exchangeRateValue);
                    if (isNaN(exchangeRate)) {
                        alert("Exchange Rate cannot be empty!!");
                        exchangeRate = 0;
                    }
                }

                let totalLKR = total * exchangeRate;

            $("#LineTotalAmountLKR").val(formatNumber(totalLKR));
            $("#LineTotalAmountUSD").val(formatNumber(total));
            // Enable /Disable Save button
            checkAmounts();
        }
        function formatNumber(num) {
            return num.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        $(document).ready(function () {
            // Add event listener to existing amount inputs
            $("input[name='Amount']").on('input', calculateTotalAmount);
        });
    </script>

<!--Check Amounts before submit-->
<script>
    function checkAmounts() {
        const mainAmount = document.getElementById('MainAmount').value.trim();
        const lineTotalAmount = document.getElementById('LineTotalAmountUSD').value.trim();
        const saveButton = document.getElementById('saveButton');

        // Function to remove thousand separators and parse as float
        function parseAmount(value) {
            // Remove commas (thousand separators)
            const cleanValue = value.replace(/,/g, '');
            // Parse as float
            return parseFloat(cleanValue);
        }

         // Convert values to numbers for comparison
        const mainAmountNum = parseAmount(mainAmount);
        const lineTotalAmountNum = parseAmount(lineTotalAmount);

        if ((mainAmountNum === lineTotalAmountNum) && !isNaN(mainAmountNum) && mainAmountNum > 0) {

            saveButton.disabled = false;
        } else {
           
            saveButton.disabled = true;
        }
    }
</script>

<!--Validate Job Number-->
<script>
    $(document).ready(function () {
        $('#JobNoInput').on('blur', function () {

            var jobNo = $(this).val();
            var jobType = $('input[name="JobType"]:checked').val();

            if (jobNo) {
                $.ajax({
                    url: '@Url.Action("ValidateJobNo", "TxnCreditNoteAccHds")',
                    type: 'POST',
                    data: { jobNo: jobNo, jobType: jobType },
                    success: function (response) {
                        if (!response.isValid) {
                            $('#jobNoError').text(response.message);
                            $('#jobNoSuccess').text('');
                            $('#JobNoInput').focus();
                        } else {
                            $('#jobNoError').text('');
                            $('#jobNoSuccess').text(response.message);
                        }
                    }
                });
            }
        });
    });
</script>



