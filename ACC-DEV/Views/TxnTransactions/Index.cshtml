@model IEnumerable<ACC_DEV.Models.TxnTransactions>

@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">

            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">Transactions</h4>
                </div>
                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Master Reference</li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h1 class="text-themecolor">Accounts Transactions</h1>
                </div>
                <div class="col-md-3 align-self-center text-right">
                </div>
                <!-- Search-->
                <div class="row align-self-center text-right">
                    @using (Html.BeginForm("Index", "TxnTransactions", new { searchString = "" }, FormMethod.Get))
                    {
                        <div class="input-group">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="searchType" id="searchByRefNo" value="RefNo" checked>
                                <label class="form-check-label" for="searchByRefNo">Ref No</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="searchType" id="searchByDocType" value="DocType">
                                <label class="form-check-label" for="searchByDocType">Doc Type</label>
                            </div>
                            <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Search..." />

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-info"><i class="fas fa-search-plus"></i> Go!</button>
                            </div>
                        </div>
                        <label class="control-label text-right col-md-4" style="color: red;">@ViewBag.InvoiceFound</label>
                    }

                </div>
                <!-- End Search-->
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">

                        <table class="table color-bordered-table purple-bordered-table">
                            <thead>
                                <tr>
                                    <th>
                                        Txn No
                                    </th>
                                    <th>
                                        TxnS No
                                    </th>
                                    <th>
                                       Date
                                    </th>
                                    <th>
                                        Acc Code
                                    </th>
                                    <th>
                                        Acc Name
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Dr
                                    </th>
                                    <th>
                                        Cr
                                    </th>
                                    <th>
                                        Doc Type
                                    </th>
                                    <th>
                                        Ref No
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TxnNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TxnSNo)
                                        </td>
                                        <td class='text-nowrap'>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td class='text-nowrap'>
                                            @Html.DisplayFor(modelItem => item.TxnTransactionNavigation.AccCode)
                                        </td>
                                        <td class='text-nowrap'>
                                            @Html.DisplayFor(modelItem => item.TxnTransactionNavigation.AccName)
                                        </td>
                                        <td class='text-nowrap'>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dr)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cr)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DocType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RefNo)
                                        </td>
                                        <td nowrap="">
                                            <a class="btn btn-sm btn-rounded btn-primary" asp-action="Edit" asp-route-id="@item.TxnNo"><i class="fa fa-edit"></i> Edit</a> |
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="container">
                @if (pager.TotalPages > 0)
                {
                    <ul class="pagination justify-content-end">
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                            <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                <a class="page-link" aps-controller="RefPorts" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                            </li>
                        }
                    </ul>
                    <ul class="pagination justify-content-end">
                        <p> Page @(pager.TotalPages < pager.CurrentPage ? 0 : pager.CurrentPage) of @pager.TotalPages </p>
                    </ul>
                }
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Container fluid  END -->
        <!-- ============================================================== -->

    </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper -  END style you can find in pages.scss -->
<!-- ============================================================== -->
